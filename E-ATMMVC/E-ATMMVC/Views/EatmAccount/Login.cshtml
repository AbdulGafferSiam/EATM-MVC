@model E_ATMMVC.Models.AccountModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login Your Account</h2>

@using (@Html.BeginForm("Details", "EatmAccount"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.CardNumber, "Enter Your Card Number:")
        @Html.TextBoxFor(m => m.CardNumber, new { @class = "form-control" })

    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PinNumber, "Enter Your Pin Number:")
        @Html.TextBoxFor(m => m.PinNumber, new { @class = "form-control" })

    </div>

    <div class="form-group">
        <button type="submit" class="btn-primary">Ok</button>
    </div>
}